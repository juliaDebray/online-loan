{% extends 'base.html.twig' %}

{% block title %}Books index{% endblock %}

{% block body %}

    <h1>Bibliothèque</h1>

    {% for book in books%}
        <div class="card mb-3">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="{{ asset('uploads/booksCover/' ~ book.image) }}"
                         class="img-fluid rounded-start"
                         alt="image de couverture du livre">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{ book.title }}</h5>
                        <p class="card-text">{{ book.description }}</p>
                        {% if book.status == 'disponible' %}
                        <p class="card-text"><small class="text-success">{{ book.status }}</small></p>
                        <a class="btn btn-success text-light">Réserver</a>
                        {% else %}
                            <p class="card-text"><small class="text-danger">{{ book.status }}</small></p>
                            <a class="btn btn-danger disabled">Indisponible</a>
                        {% endif %}

                    </div>
                </div>
            </div>
        </div>
    {% endfor %}

{% endblock %}
