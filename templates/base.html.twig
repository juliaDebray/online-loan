<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        {% block header %}
    <header>
        {% set currentPath = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) %}
            <nav class="navbar navbar-expand-lg navbar-dark bg-info">
                <div class="container-fluid">
                    <a class="navbar-brand" href="{{ path('home_page') }}">Médiathèque en ligne</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarText">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            {% if app.user %}
                            <li class="nav-item">
                                <a class="nav-link {{ currentPath == path('books_catalog') ? 'active' : '' }}" href="{{ path('books_catalog') }}">Bibliothèque</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Mes emprunts</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {{ currentPath == path('loanings_show') ? 'active' : '' }}" href="{{ path('loanings_show') }}">Les emprunts en cours</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {{ currentPath == path('employees_new') ? 'active' : '' }}" href="{{ path('employees_new') }}">Créer un compte employé</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {{ currentPath == path('customers_validation_page') ? 'active' : '' }}" href="{{ path('customers_validation_page') }}">Demandes de compte</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {{ currentPath == path('books_new') ? 'active' : '' }}" href="{{ path('books_new') }}">Ajouter un livre</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                            </li>
                            {% else %}
                            <li class="nav-item">
                                <a class="nav-link {{ currentPath == path('app_login') ? 'active' : '' }}" href="{{ path('app_login') }}">Connexion</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {{ currentPath == path('customers_new') ? 'active' : '' }}" href="{{ path('customers_new') }}">Inscritpion</a>
                            </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </nav>
    </header>
        {% endblock header %}
        <main class="container">
            {% block body %}
            {% endblock %}
        </main>
        {% block footer %}
            <footer class="py-5 bg-dark text-light text-center">
                    <p>@Julia Debray</p>
            </footer>
        {% endblock footer %}
    </body>
</html>
